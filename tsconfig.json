{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "declaration": true,
    "removeComments": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "baseUrl": "."
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}